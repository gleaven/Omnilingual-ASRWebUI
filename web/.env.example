# Application Settings
APP_NAME=Omnilingual ASR Web
APP_VERSION=1.0.0
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8123

# Database (PostgreSQL)
DATABASE_URL=postgresql://omniasr:omniasr@db:5432/omniasr

# For SQLite (simpler, single-user):
# DATABASE_URL=sqlite:///./omniasr.db

# Redis
REDIS_URL=redis://redis:6379/0

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Storage
STORAGE_PATH=/app/storage
MAX_UPLOAD_SIZE=524288000  # 500MB

# Processing
DEFAULT_MODEL=LLM_7B
CHUNK_DURATION=30
ENABLE_DIARIZATION=true
MAX_AUDIO_DURATION=36000  # 10 hours

# ASR Models
MODEL_CACHE_DIR=/root/.cache/fairseq2/assets
DEVICE=cuda  # or "cpu"
DTYPE=float32  # or "bfloat16"

# Security
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_ORIGINS=http://localhost:8123
